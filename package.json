{
  "name": "gnomies-collaborative-storytelling",
  "version": "1.0.0",
  "description": "A collaborative storytelling application with voting and real-time features",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "client-build": "cd client && npm run build",
    "dev-full": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "npm run client-build",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.4",
    "cors": "^2.8.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  },
  "keywords": ["storytelling", "collaboration", "voting", "real-time", "react"],
  "author": "Gnomies Team",
  "license": "MIT"
}